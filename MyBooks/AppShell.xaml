<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyBooks.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyBooks.Pages"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Title="MyBooks"
    Shell.TabBarBackgroundColor="{AppThemeBinding Dark={DynamicResource OffBlack},
                                                  Light=White}">
    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={DynamicResource White}, Dark={DynamicResource OffBlack}}" StatusBarStyle="{AppThemeBinding Light=DarkContent, Dark=LightContent}" />
    </Shell.Behaviors>

    <!--  Tabs bar  -->
    <TabBar>

        <!--  Home Tab  -->
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="mat" Glyph="&#xe9c4;" />
            </Tab.Icon>
        </Tab>

        <!--  Settings Tab  -->
        <Tab Title="Settings">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate local:SettingsPage}"
                Route="SettingsPage" />
            <Tab.Icon>
                <FontImageSource FontFamily="mat" Glyph="&#xe8b8;" />
            </Tab.Icon>
        </Tab>

    </TabBar>

</Shell>
