<ContentPage
    x:Class="MyBooks.Pages.BookDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyBooks.ViewModels"
    Title="{Binding Book.Title}"
    x:DataType="local:BookDetailsViewModel"
    Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!--  Cover Image with rounded border  -->
            <Border
                Padding="0"
                HeightRequest="360"
                HorizontalOptions="Center"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="0"
                WidthRequest="240">
                <Image Aspect="AspectFill" Source="{Binding Book.CoverImage}" />
            </Border>

            <!--  Title  -->
            <Label
                FontAttributes="Bold"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{Binding Book.Title}" />

            <!--  Authors  -->
            <Border
                Padding="12"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Authors"
                        TextColor="{StaticResource PrimaryDark}" />
                    <Label FontSize="16" Text="{Binding Book.AuthorsString}" />
                </VerticalStackLayout>
            </Border>

            <!--  Subjects  -->
            <Border
                Padding="12"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Subjects"
                        TextColor="{StaticResource PrimaryDark}" />
                    <Label FontSize="16" Text="{Binding Book.SubjectsString}" />
                </VerticalStackLayout>
            </Border>

            <!--  Bookshelves  -->
            <Border
                Padding="12"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Bookshelves"
                        TextColor="{StaticResource PrimaryDark}" />
                    <Label FontSize="16" Text="{Binding Book.BookshelvesString}" />
                </VerticalStackLayout>
            </Border>

            <!--  Download Count  -->
            <Border
                Padding="12"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 12">
                <VerticalStackLayout Spacing="6">
                    <Label
                        FontAttributes="Bold"
                        FontSize="18"
                        Text="Download Count"
                        TextColor="{StaticResource PrimaryDark}" />
                    <Label FontSize="16" Text="{Binding Book.DownloadCount}" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
